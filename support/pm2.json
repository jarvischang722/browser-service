{
  "apps": [
    {
      "name"                : "discover-service",
      "script"              : "src/index.js",
      "ignore_watch"        : ["log", "pid"],
      "instances"           : 1,
      "exec_mode"           : "cluster_mode",
      "env"                 : {
        "NODE_ENV"          : "prod"
      },
      "max_memory_restart"  : "1G",
      "merge_logs"          : true,
      "max_restarts"        : 30
    }
  ]
}